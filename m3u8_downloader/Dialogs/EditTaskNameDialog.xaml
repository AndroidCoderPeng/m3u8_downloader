<UserControl
    x:Class="m3u8_downloader.Dialogs.EditTaskNameDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:prism="http://prismlibrary.com/"
    xmlns:vm="clr-namespace:m3u8_downloader.ViewModels"
    Width="450"
    Height="200"
    d:DataContext="{d:DesignInstance Type=vm:EditTaskNameDialogViewModel}"
    mc:Ignorable="d">

    <prism:Dialog.WindowStyle>
        <Style TargetType="Window">
            <Setter Property="prism:Dialog.WindowStartupLocation" Value="CenterOwner" />
            <Setter Property="SizeToContent" Value="WidthAndHeight" />
            <Setter Property="ResizeMode" Value="NoResize" />
        </Style>
    </prism:Dialog.WindowStyle>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="90" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="10,10,10,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <TextBlock
                Grid.Column="0"
                Width="80"
                VerticalAlignment="Center"
                Text="任务标题" />

            <hc:TextBox
                Grid.Column="1"
                Margin="10,0,0,0"
                Padding="7,5"
                VerticalContentAlignment="Top"
                hc:InfoElement.Placeholder="请输入新的任务标题"
                hc:InfoElement.ShowClearButton="True"
                BorderBrush="{DynamicResource AppBorderBrush}"
                Text="{Binding TaskName}"
                TextWrapping="Wrap" />
        </Grid>

        <UniformGrid
            Grid.Row="1"
            Width="300"
            Margin="10"
            HorizontalAlignment="Right"
            VerticalAlignment="Bottom"
            Columns="2"
            Rows="1">
            <Button
                Margin="0,0,10,0"
                HorizontalAlignment="Stretch"
                Command="{Binding DialogCancelCommand}"
                Content="取消"
                Style="{StaticResource ButtonWarning}" />

            <Button
                Margin="10,0,0,0"
                HorizontalAlignment="Stretch"
                Command="{Binding DialogUpdateCommand}"
                Content="保存"
                Style="{StaticResource ButtonPrimary}" />
        </UniformGrid>
    </Grid>
</UserControl>
