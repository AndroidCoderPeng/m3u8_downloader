<UserControl
    x:Class="m3u8_downloader.Dialogs.MergeProgressDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:prism="http://prismlibrary.com/"
    xmlns:vm="clr-namespace:m3u8_downloader.ViewModels"
    Width="300"
    Height="300"
    d:DataContext="{d:DesignInstance Type=vm:MergeProgressDialogViewModel}"
    mc:Ignorable="d">

    <prism:Dialog.WindowStyle>
        <Style TargetType="Window">
            <Setter Property="prism:Dialog.WindowStartupLocation" Value="CenterOwner" />
            <Setter Property="SizeToContent" Value="WidthAndHeight" />
            <Setter Property="ResizeMode" Value="NoResize" />
            <Setter Property="ShowInTaskbar" Value="False" />
        </Style>
    </prism:Dialog.WindowStyle>

    <Grid>
        <!--  背景圆环画布  -->
        <Canvas
            x:Name="CirclePathCanvas"
            Width="200"
            Height="200" />

        <!--  进度显示圆环  -->
        <Path
            x:Name="ProgressPath"
            Stretch="Uniform"
            Stroke="{DynamicResource AppThemeBrush}"
            StrokeEndLineCap="Round"
            StrokeStartLineCap="Round"
            StrokeThickness="15"
            Visibility="Collapsed">
            <Path.Data>
                <PathGeometry>
                    <PathFigure StartPoint="100 0">
                        <ArcSegment
                            x:Name="ArcSegment"
                            IsLargeArc="True"
                            Size="100 100"
                            SweepDirection="Clockwise" />
                    </PathFigure>
                </PathGeometry>
            </Path.Data>
        </Path>

        <!--  中间显示文字  -->
        <TextBlock
            x:Name="ProgressTextBlock"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            FontSize="24"
            Text="0%" />
    </Grid>
</UserControl>