<UserControl
    x:Class="m3u8_downloader.Dialogs.AboutSoftwareDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:prism="http://prismlibrary.com/"
    xmlns:vm="clr-namespace:m3u8_downloader.ViewModels"
    Width="372"
    Height="256"
    d:DataContext="{d:DesignInstance Type=vm:AboutSoftwareDialogViewModel}"
    mc:Ignorable="d">

    <prism:Dialog.WindowStyle>
        <Style TargetType="Window">
            <Setter Property="prism:Dialog.WindowStartupLocation" Value="CenterOwner" />
            <Setter Property="ShowInTaskbar" Value="False" />
            <Setter Property="SizeToContent" Value="WidthAndHeight" />
            <Setter Property="ResizeMode" Value="NoResize" />
        </Style>
    </prism:Dialog.WindowStyle>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Image
            Grid.Row="0"
            Width="96"
            Height="96"
            Source="/Images/application.png" />

        <TextBlock
            Grid.Row="1"
            HorizontalAlignment="Center"
            FontSize="24"
            Foreground="Blue"
            Text="M3U8视频下载器" />

        <TextBlock
            Grid.Row="2"
            Margin="0,10"
            HorizontalAlignment="Center"
            FontSize="14"
            Foreground="Blue"
            Text="v1.0.0.0 WPF" />

        <TextBlock
            Grid.Row="3"
            Margin="0,30,0,10"
            HorizontalAlignment="Center"
            FontSize="14"
            Foreground="DarkGray"
            Text="Copyright © CoderPeng 2025" />
    </Grid>
</UserControl>
