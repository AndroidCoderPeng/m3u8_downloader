<UserControl
    x:Class="m3u8_downloader.Pages.DownloadTaskPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:model="clr-namespace:m3u8_downloader.Models"
    xmlns:vm="clr-namespace:m3u8_downloader.ViewModels"
    d:DataContext="{d:DesignInstance Type=vm:DownloadTaskPageViewModel}"
    d:DesignHeight="400"
    d:DesignWidth="600"
    mc:Ignorable="d">

    <UserControl.Resources>
        <Style x:Key="ListBoxItemStyleKey" TargetType="ListBoxItem">
            <Setter Property="Foreground" Value="{DynamicResource AppTextBrush}" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ListBoxItem}">
                        <Border
                            x:Name="ItemContainerBorder"
                            Margin="{TemplateBinding Margin}"
                            Padding="15,3"
                            Background="{TemplateBinding Background}"
                            BorderThickness="3"
                            CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Stretch" VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>

            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{DynamicResource AppMouseOverBrush}" />
                </Trigger>

                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="{DynamicResource AppThemeBrush}" />
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Border
        Margin="10"
        Background="White"
        CornerRadius="5">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="1" />
                <RowDefinition />
            </Grid.RowDefinitions>

            <TextBlock
                Grid.Row="0"
                Padding="15"
                FontSize="18"
                FontWeight="Bold"
                Foreground="{DynamicResource AppTextBrush}"
                Text="软件设置" />

            <Grid
                Grid.Row="1"
                Margin="15,0"
                Background="{DynamicResource AppBorderBrush}" />

            <Grid Grid.Row="2" Margin="10,5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition />
                </Grid.RowDefinitions>

                <Grid Grid.Row="0" Margin="5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition Width="100" />
                    </Grid.ColumnDefinitions>

                    <hc:TextBox
                        Grid.Column="0"
                        hc:InfoElement.Placeholder="请填入M3U8资源地址"
                        hc:InfoElement.ShowClearButton="True"
                        Text="{Binding M3U8Url}" />

                    <Button
                        Grid.Column="1"
                        Margin="10,0,0,0"
                        HorizontalAlignment="Stretch"
                        Command="{Binding ParseUrlCommand}"
                        Content="解析" />
                </Grid>

                <ListBox
                    x:Name="DownloadTaskListBox"
                    Grid.Row="1"
                    BorderThickness="0"
                    ItemsSource="{Binding DownloadTaskSource}"
                    Visibility="{Binding IsDownloadTaskVisible}">

                    <b:Interaction.Triggers>
                        <b:EventTrigger EventName="MouseDoubleClick">
                            <b:InvokeCommandAction Command="{Binding MouseDoubleClickCommand}" CommandParameter="{Binding ElementName=DownloadTaskListBox, Path=SelectedItem.TaskName}" />
                        </b:EventTrigger>
                    </b:Interaction.Triggers>

                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <DockPanel LastChildFill="True">
                                <Image
                                    Width="80"
                                    Height="80"
                                    Source="/Images/application.png" />

                                <Grid Margin="10,0,0,0">
                                    <Grid.RowDefinitions>
                                        <RowDefinition />
                                        <RowDefinition />
                                        <RowDefinition />
                                    </Grid.RowDefinitions>

                                    <Grid Grid.Row="0" Margin="0,10,0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition />
                                        </Grid.ColumnDefinitions>

                                        <TextBlock
                                            Grid.Column="0"
                                            VerticalAlignment="Center"
                                            FontSize="16"
                                            Text="{Binding TaskName}" />

                                        <Border
                                            Grid.Column="1"
                                            Margin="5,0"
                                            Padding="5,3"
                                            Background="{DynamicResource PrimaryBrush}"
                                            CornerRadius="3">
                                            <TextBlock
                                                VerticalAlignment="Center"
                                                Foreground="White"
                                                Text="{Binding TaskState}" />
                                        </Border>

                                        <Button
                                            Grid.Column="2"
                                            Padding="3,0"
                                            HorizontalAlignment="Right"
                                            Background="Transparent"
                                            BorderThickness="0"
                                            Command="{Binding DataContext.EditTaskCommand, ElementName=DownloadTaskListBox}"
                                            CommandParameter="{Binding}"
                                            Content="&#xe6af;"
                                            FontFamily="/m3u8_downloader;component/#iconfont"
                                            FontSize="14"
                                            Style="{x:Null}" />
                                    </Grid>

                                    <Grid Grid.Row="1" Margin="0,10">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>

                                        <ProgressBar
                                            Grid.Column="0"
                                            Height="12"
                                            Style="{DynamicResource ProgressBarInfo}"
                                            Value="{Binding PercentComplete}" />

                                        <TextBlock
                                            Grid.Column="1"
                                            Margin="10,0,0,0"
                                            HorizontalAlignment="Center">
                                            <TextBlock.Text>
                                                <MultiBinding StringFormat="已下载 {0}/{1} 片段">
                                                    <Binding Path="DownloadedSegments" />
                                                    <Binding Path="TotalSegments" />
                                                </MultiBinding>
                                            </TextBlock.Text>
                                        </TextBlock>
                                    </Grid>

                                    <UniformGrid
                                        Grid.Row="2"
                                        Margin="0,0,0,10"
                                        Columns="2">
                                        <TextBlock Text="{Binding Duration, StringFormat=时长：{0}}" />
                                        <TextBlock HorizontalAlignment="Right" Text="{Binding TotalSize, StringFormat=大小：{0}}" />
                                    </UniformGrid>
                                </Grid>
                            </DockPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>

                    <!--  右键菜单  -->
                    <ListBox.ContextMenu>
                        <ContextMenu Width="120">
                            <MenuItem
                                Command="{Binding DeleteTaskCommand}"
                                CommandParameter="{Binding Path=PlacementTarget.(ListBox.SelectedItem).(model:DownloadTask.Url), RelativeSource={RelativeSource AncestorType=ContextMenu}}"
                                Header="删除" />
                        </ContextMenu>
                    </ListBox.ContextMenu>

                    <ListBox.ItemContainerStyle>
                        <Style BasedOn="{StaticResource ListBoxItemStyleKey}" TargetType="ListBoxItem" />
                    </ListBox.ItemContainerStyle>
                </ListBox>

                <Grid Grid.Row="1" Visibility="{Binding IsEmptyImageVisible}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="100" />
                        <RowDefinition />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="100" />
                    </Grid.RowDefinitions>

                    <Image Grid.Row="1" Source="/m3u8_downloader;component/Images/empty_image.png" />

                    <TextBlock
                        Grid.Row="2"
                        HorizontalAlignment="Center"
                        FontSize="18"
                        Text="这里什么都没有~" />
                </Grid>
            </Grid>
        </Grid>
    </Border>
</UserControl>
