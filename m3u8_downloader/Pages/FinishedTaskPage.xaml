<UserControl
    x:Class="m3u8_downloader.Pages.FinishedTaskPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:cvt="clr-namespace:m3u8_downloader.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:m3u8_downloader.ViewModels"
    d:DataContext="{d:DesignInstance Type=vm:FinishedTaskPageViewModel}"
    d:DesignHeight="400"
    d:DesignWidth="600"
    mc:Ignorable="d">

    <UserControl.Resources>
        <cvt:EmptyViewConverter x:Key="EmptyViewConverterKey" />
        <cvt:ContentViewConverter x:Key="ContentViewConverterKey" />
        <cvt:LoadingStateConverter x:Key="LoadingStateConverterKey" />
    </UserControl.Resources>

    <Grid>
        <Grid Visibility="{Binding Videos.Count, Converter={StaticResource EmptyViewConverterKey}}">
            <Grid.RowDefinitions>
                <RowDefinition Height="100" />
                <RowDefinition />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="100" />
            </Grid.RowDefinitions>

            <Image Grid.Row="1" Source="/m3u8_downloader;component/Images/empty_image.png" />

            <TextBlock
                Grid.Row="2"
                HorizontalAlignment="Center"
                FontSize="18"
                Text="这里什么都没有~" />
        </Grid>

        <Grid Visibility="{Binding Videos.Count, Converter={StaticResource ContentViewConverterKey}}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <ListBox
                x:Name="VideoListBox"
                Grid.Column="0"
                HorizontalAlignment="Stretch"
                BorderThickness="0"
                ItemsSource="{Binding Videos}"
                SelectedIndex="0">

                <b:Interaction.Triggers>
                    <b:EventTrigger EventName="SelectionChanged">
                        <b:InvokeCommandAction Command="{Binding ItemSelectedCommand}" CommandParameter="{Binding ElementName=ImageFolderListBox, Path=SelectedItem}" />
                    </b:EventTrigger>

                    <b:EventTrigger EventName="MouseDoubleClick">
                        <b:InvokeCommandAction Command="{Binding MouseDoubleClickCommand}" CommandParameter="{Binding ElementName=ImageFileListBox, Path=SelectedItem}" />
                    </b:EventTrigger>
                </b:Interaction.Triggers>

                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>


                            <TextBlock
                                Grid.Column="1"
                                Padding="0,20,20,20"
                                VerticalAlignment="Center"
                                FontSize="16"
                                Text="{Binding FolderName}" />
                        </Grid>
                    </DataTemplate>
                </ListBox.ItemTemplate>


            </ListBox>

            <Grid
                Grid.Column="1"
                VerticalAlignment="Center"
                Visibility="{Binding IsLoadingCompleted, Converter={StaticResource LoadingStateConverterKey}}">
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <ProgressBar
                    Grid.Row="0"
                    Width="400"
                    IsIndeterminate="True"
                    Style="{StaticResource ProgressBarPrimaryStripe}" />

                <TextBlock
                    Grid.Row="1"
                    Margin="0,20"
                    HorizontalAlignment="Center"
                    FontSize="18"
                    Text="数据加载中，请稍后..." />
            </Grid>
        </Grid>
    </Grid>
</UserControl>
