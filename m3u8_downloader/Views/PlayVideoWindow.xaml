<Window
    x:Class="m3u8_downloader.Views.PlayVideoWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="PlayerRootWindow"
    d:DesignHeight="300"
    d:DesignWidth="400"
    ShowInTaskbar="False"
    WindowStartupLocation="CenterOwner"
    mc:Ignorable="d">

    <Window.Resources>
        <!--  显示 ControllerGrid 动画  -->
        <Storyboard x:Key="ShowControllerAnimation">
            <DoubleAnimation
                Storyboard.TargetName="ControllerGrid"
                Storyboard.TargetProperty="(Grid.RenderTransform).(TranslateTransform.Y)"
                From="80"
                To="0"
                Duration="0:0:0.3" />
        </Storyboard>

        <!--  隐藏 ControllerGrid 动画  -->
        <Storyboard x:Key="HideControllerAnimation">
            <DoubleAnimation
                Storyboard.TargetName="ControllerGrid"
                Storyboard.TargetProperty="(Grid.RenderTransform).(TranslateTransform.Y)"
                From="0"
                To="80"
                Duration="0:0:0.3" />
        </Storyboard>
    </Window.Resources>

    <Grid>
        <MediaElement
            x:Name="VideoPlayerElement"
            LoadedBehavior="Play"
            MediaEnded="VideoPlayerElement_MediaEnded"
            MediaOpened="VideoPlayerElement_MediaOpened"
            UnloadedBehavior="Stop" />

        <Grid
            x:Name="ControllerGrid"
            Height="80"
            VerticalAlignment="Bottom"
            Background="Black"
            RenderTransformOrigin="0.5,0.5">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition />
            </Grid.RowDefinitions>

            <Grid.RenderTransform>
                <TranslateTransform Y="80" />
            </Grid.RenderTransform>

            <Grid Grid.Row="0" Margin="5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <TextBlock
                    Grid.Column="0"
                    VerticalAlignment="Center"
                    Foreground="White"
                    Text="00:00:00"
                    TextWrapping="NoWrap" />

                <Slider
                    x:Name="DurationSlider"
                    Grid.Column="1"
                    Margin="5,0"
                    Minimum="0"
                    Value="0" />

                <TextBlock
                    x:Name="DurationTextBlock"
                    Grid.Column="2"
                    VerticalAlignment="Center"
                    Foreground="White"
                    Text="00:00:00"
                    TextWrapping="NoWrap" />
            </Grid>

            <Grid Grid.Row="1" Margin="5,0,10,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="2*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Grid Grid.Column="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>

                    <Button
                        Grid.Column="0"
                        Padding="5"
                        Background="Transparent"
                        Content="&#xe6e9;"
                        FontFamily="/m3u8_downloader;component/#iconfont"
                        FontSize="24"
                        Foreground="White"
                        Style="{x:Null}" />

                    <Button
                        Grid.Column="1"
                        Padding="5"
                        Background="Transparent"
                        Content="&#xe6c2;"
                        FontFamily="/m3u8_downloader;component/#iconfont"
                        FontSize="24"
                        Foreground="White"
                        Style="{x:Null}" />

                    <Button
                        Grid.Column="2"
                        Padding="5"
                        Background="Transparent"
                        Content="&#xe677;"
                        FontFamily="/m3u8_downloader;component/#iconfont"
                        FontSize="24"
                        Foreground="White"
                        Style="{x:Null}" />
                </Grid>

                <Grid Grid.Column="2" HorizontalAlignment="Right">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>

                    <Button
                        Grid.Column="0"
                        Padding="10,5"
                        Background="Transparent"
                        Content="&#xe6d7;"
                        FontFamily="/m3u8_downloader;component/#iconfont"
                        FontSize="24"
                        Foreground="White"
                        Style="{x:Null}" />

                    <Button
                        Grid.Column="1"
                        Margin="10,0,0,0"
                        Padding="10,5"
                        Background="Transparent"
                        Content="&#xe60c;"
                        FontFamily="/m3u8_downloader;component/#iconfont"
                        FontSize="24"
                        Foreground="White"
                        Style="{x:Null}" />
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</Window>