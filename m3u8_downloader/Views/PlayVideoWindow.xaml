<Window
    x:Class="m3u8_downloader.Views.PlayVideoWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="PlayerRootWindow"
    d:DesignHeight="300"
    KeyDown="PlayVideoWindow_OnKeyDown"
    d:DesignWidth="400"
    ShowInTaskbar="False"
    WindowStartupLocation="CenterOwner"
    mc:Ignorable="d">

    <Window.Resources>
        <!--  显示 ControllerGrid 动画  -->
        <Storyboard x:Key="ShowControllerAnimation">
            <DoubleAnimation
                Storyboard.TargetName="ControllerGrid"
                Storyboard.TargetProperty="(Grid.RenderTransform).(TranslateTransform.Y)"
                From="80"
                To="0"
                Duration="0:0:0.3" />
        </Storyboard>

        <!--  隐藏 ControllerGrid 动画  -->
        <Storyboard x:Key="HideControllerAnimation">
            <DoubleAnimation
                Storyboard.TargetName="ControllerGrid"
                Storyboard.TargetProperty="(Grid.RenderTransform).(TranslateTransform.Y)"
                From="0"
                To="80"
                Duration="0:0:0.3" />
        </Storyboard>

        <Style x:Key="ControllerButtonStyle" TargetType="Button">
            <Setter Property="Padding" Value="5" />
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="FontFamily" Value="/m3u8_downloader;component/#iconfont" />
            <Setter Property="FontSize" Value="24" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border
                            x:Name="TargetBorder"
                            Padding="{TemplateBinding Padding}"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter
                                HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="TargetBorder" Property="Background" Value="Transparent" />
                                <Setter Property="Foreground" Value="{StaticResource PrimaryBrush}" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <MediaElement
            x:Name="VideoPlayerElement"
            LoadedBehavior="Manual"
            MediaEnded="VideoPlayerElement_MediaEnded"
            MediaOpened="VideoPlayerElement_MediaOpened"
            UnloadedBehavior="Stop" />

        <Grid
            x:Name="ControllerGrid"
            Height="80"
            VerticalAlignment="Bottom"
            Background="Black"
            RenderTransformOrigin="0.5,0.5">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition />
            </Grid.RowDefinitions>

            <Grid.RenderTransform>
                <TranslateTransform Y="80" />
            </Grid.RenderTransform>

            <Grid Grid.Row="0" Margin="10,5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <TextBlock
                    x:Name="PositionTextBlock"
                    Grid.Column="0"
                    VerticalAlignment="Center"
                    FontSize="13"
                    Foreground="White"
                    Text="00:00:00"
                    TextWrapping="NoWrap" />

                <Slider
                    x:Name="DurationSlider"
                    Grid.Column="1"
                    Margin="5,0"
                    Minimum="0"
                    Thumb.DragCompleted="DurationSlider_DragCompleted"
                    Thumb.DragStarted="DurationSlider_DragStarted"
                    Value="0" />

                <TextBlock
                    x:Name="DurationTextBlock"
                    Grid.Column="2"
                    VerticalAlignment="Center"
                    FontSize="13"
                    Foreground="White"
                    Text="00:00:00"
                    TextWrapping="NoWrap" />
            </Grid>

            <Grid Grid.Row="1" Margin="10,0,10,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="2*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <Grid Grid.Column="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>

                    <Button
                        x:Name="RewindButton"
                        Grid.Column="0"
                        Content="&#xe6c8;"
                        Style="{DynamicResource ControllerButtonStyle}"
                        ToolTip="快退5s（←）" />

                    <Button
                        x:Name="PlayButton"
                        Grid.Column="1"
                        Content="&#xe6c2;"
                        Style="{DynamicResource ControllerButtonStyle}" />

                    <Button
                        x:Name="ForwardButton"
                        Grid.Column="2"
                        Content="&#xe678;"
                        Style="{DynamicResource ControllerButtonStyle}"
                        ToolTip="快进5s（→）" />
                </Grid>

                <DockPanel
                    Grid.Column="1"
                    Width="300"
                    HorizontalAlignment="Right"
                    LastChildFill="True">
                    <Button
                        x:Name="VoiceButton"
                        Padding="10,5"
                        Content="&#xe6d7;"
                        Style="{DynamicResource ControllerButtonStyle}"
                        ToolTip="音量" />

                    <Slider
                        x:Name="VoiceSlider"
                        Margin="5,0"
                        VerticalAlignment="Center"
                        Minimum="0"
                        Value="0" />
                </DockPanel>

                <Button
                    x:Name="ExpendButton"
                    Grid.Column="2"
                    Margin="5,0,0,0"
                    Padding="10,5"
                    HorizontalAlignment="Right"
                    Content="&#xe60c;"
                    Style="{DynamicResource ControllerButtonStyle}"
                    ToolTip="全屏（F11）" />
            </Grid>
        </Grid>
    </Grid>
</Window>